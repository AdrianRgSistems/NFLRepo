@using NFL.Shared.ModelsDTO

@if (team != null)
{
    <div class="t-box mb-2 p-1">
        @if (itsLocal)
        {
            <div class="name2">
                @{
                    var text = (itsOver) ? score.ToString() + "       " + team.LastName : team.LastName;
                    <span class="m-2">@text </span>
                }
            </div>
            <div class="img2">
                <img width="30px" height="30px" src="@team.ImageUrl" alt="@team.TeamName" />
            </div>
        }
        else
        {
            <div class="img1">
                <img width="30px" height="30px" src="@team.ImageUrl" alt="@team.TeamName" />
            </div>
            <div class="name1">
                @{
                    var text = (itsOver) ? team.LastName + "       " + score.ToString() : team.LastName;
                    <span class="m-2">@text</span>
                }
            </div>
        }
    </div>
}

@code {
    [Parameter] public TeamDTO team { get; set; }
    [Parameter] public bool itsLocal { get; set; } = false;
    [Parameter] public bool itsOver { get; set; } = false;
    [Parameter] public int score { get; set; } = 0;
}

<style>
    body {
        font-size: 11px;
    }

    .t-box {
        border: 1px solid black;
        display: grid;
        width: 40vh;
        grid-template-columns: repeat(3, 1fr);
    }

    .img1 {
        grid-column: 1;
        grid-row: 1;
        justify-self: center;
        align-self: center;
    }

    .name1 {
        grid-column: 2/4;
        grid-row: 1;
        justify-self: end;
        align-self: center;
    }

    .img2 {
        grid-column: 3;
        grid-row: 1;
        justify-self: center;
        align-self: center;
    }

    .name2 {
        grid-column: 1/3;
        grid-row: 1;
        align-self: center;
    }
</style>